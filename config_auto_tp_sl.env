# Configuration pour TP/SL Automatiques avec Ratio R/R 1:2
# Copiez ce fichier vers config.env et ajustez selon vos besoins

# === CLÉS API KRAKEN ===
SPOT_API_KEY=your_spot_api_key_here
SPOT_SECRET_KEY=your_spot_secret_key_here

# === CONFIGURATION DU TRADING ===
TRADING_MODE=spot
INVESTMENT_AMOUNT=1000
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=3
TAKE_PROFIT_PERCENTAGE=6

# === CONFIGURATION TP/SL AUTOMATIQUES ===
USE_AUTO_TP_SL=true
RISK_REWARD_RATIO=2.0
AUTO_TP_SL_METHOD=percentage
ATR_MULTIPLIER_TP=2.0
ATR_MULTIPLIER_SL=1.0
USE_TRAILING_STOP=false
TRAILING_STOP_PERCENTAGE=2.0

# === CONFIGURATION MULTI-PAIRE ===
TRADING_PAIRS=["XXBTZEUR", "XETHZEUR"]

# === CONFIGURATION PAR PAIRE AVEC TP/SL SPÉCIFIQUES ===
PAIR_CONFIGS={
  "XXBTZEUR": {
    "stop_loss": 3,
    "take_profit": 6,
    "risk_reward_ratio": 2.0,
    "allocation": 60
  },
  "XETHZEUR": {
    "stop_loss": 4,
    "take_profit": 8,
    "risk_reward_ratio": 2.0,
    "allocation": 40
  }
}

# === MONEY MANAGEMENT ===
POSITION_SIZING_METHOD=kelly
MAX_RISK_PER_TRADE=2
MAX_CORRELATED_RISK=5
MAX_DRAWDOWN=20
DRAWDOWN_REDUCTION=0.5
KELLY_FRACTION=0.25
MIN_SIGNAL_CONFIDENCE=0.6

# === CONFIGURATION DES INDICATEURS ===
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
BOLLINGER_STD=2
MA_FAST=9
MA_SLOW=21

# === INTERVALLE DE VÉRIFICATION ===
CHECK_INTERVAL=5

# === OPTIMISATION ===
CACHE_DURATION=60
MIN_API_INTERVAL=3
DEBUG_MODE=false

